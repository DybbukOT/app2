<body class="blue-grey darken-4">
<nav>
	<div class="nav-wrapper blue darken-1 full-width">
		<span class="brand-logo center">Libro de visitas</span>
	</div>
</nav>
<br>
<div class="divider"></div>
<br>
<center>
	<%= link_to 'Volver al libro de visitas', class_index_path, class: "btn blue darken-4", style: "color:white" %>
</center>
<br>
<div class="divider"></div>
<br>

<div class="col s6">
	<div class="container blue lighten-5">
	<%= form_for @usuario, url: class_crear_path do |u| %>
		<div class="row">
			<div class="col s10 offset-s1"><h5><b><center>Nueva visita:</center></b></h5></div>
		</div>
		<div class="row">
			<div class="col s6 offset-s3">
				<label for="nom" class="black-text">Nombre:</label>
				<%= u.text_field :nombre, id:"nom", placeholder:"Ej: Juanito" %>
			</div>
			<div class="col s6 offset-s3">
				<label for="ap" class="black-text">Apellido(s):</label>
				<%= u.text_field :ap, id:"ap", placeholder:"Ej: Hernandez" %>
			</div>
			<div class="col s6 offset-s3">
				<label for="edad" class="black-text">Edad:</label>
				<%= u.number_field :edad, id:"edad", placeholder:"Ej: 18" %>
			</div>
			<div class="col s6 offset-s3">
				<label for="sex" class="black-text">Sexo:</label>
				<%= u.select :sexo, options_for_select([["Mujer", "Mujer"], ["Hombre", "Hombre"]]) %>
			</div>
			<div class="row">
				<div class="col s4 offset-s4">
					<center><%= u.submit "Crear", class: "btn" %></center>
				</div>
			</div>
		</div>
	<% end %>
	</div>
</div>
<br>
<script>
	$(document).ready(function() {
	    $('select').material_select();
	  });
</script>
</body>